{{#if logged_in}}
<div class="card mt-4">
  <div class="card-body">
    <form class="create-note-form">
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Write <span class="fw-bold">{{user.username}}</span> a note! (Hint: be respectful)</label>
