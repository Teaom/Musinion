<div class="card">
  <img src="{{review.cover_url}}" class="card-img-top" />
  <div class="card-body">
    <h4 class="card-title">{{review.album_name}}</h4>
    <h5 class="card-title">by {{review.artist_name}}</h5>
    <p class="card-text">{{review.review}}</p>
    <h5 class="card-title">&#11088;{{review.review_rating}}
      out of 5&#11088;</h5>
    <h6 class="card-title"> Reviewed by: {{user.username}}</h6>
  </div>
</div>

{{#if note}}
<div class="card mt-4">
  <div class="card-header">
    Notes
  </div>
  <ul class="list-group list-group-flush">
    {{#each review.note as |note|}}
    <li class="list-group-item">
        <p class="fw-bold mb-0">"{{note.contents}}"</p>
        <p class="blockquote-footer fs-6 mt-1 mb-0"><span class="fw-bold">{{note.user.username}}</span> on {{format_date comment.date_created}} </p>
    </li>
    {{/each}}
